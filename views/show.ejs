<%- include('header') -%>

  <div class="post">
    <h1><%= post.title %></h1>
    <p class="meta">
      Posted in <a href="/categories/show/<%= post.category %>"><%= post.category %></a>
      by <%= post.author %>
      on <%= moment(post.date).format("MM-DD-YYYY") %>
    </p>
    <img src="/uploads/<%= post.mainimage %>"/>
    <%- post.body %>
    <br>
    <hr>
    <% if (post.comments) { %>
      <h3>Comments</h3>
      <% post.comments.forEach(function(comment) { %>
        <div class="comment">
          <p class="comment-name"><%= comment.name %></p>
          <p class="comment-body"><%= comment.body %></p>
        </div>
      <% }); %>
    <% } %>
    <br>
  </div>
  <div id="comments">
    <h3>Add Comment</h3>
    <ul class="errors">
      <% if (errors) { errors.forEach(function(error) { %>
        <li class="alert alert-danger"><%= error.msg %></li>
      <% });} %>
    </ul>
    <form class="comment-form" method="post" action="/posts/addcomment">
      <input name="postid" type="hidden" value="<%= post._id %>"/>
      <div class="form-group">
        <label>Name</label>
        <input class="form-control" type="text" name="name"/>
      </div>
      <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="text" name="email"/>
      </div>
      <div class="form-group">
        <label>Body</label>
        <textarea class="form-control" type="text" name="body"></textarea>
      </div><br/>
      <input class="btn btn-default" type="submit" name="submit" value="Add Comment"/>
    </form>
  </div>



<footer>
  <p>NodeBlog &copy; 2016</p>
</footer>
</div> <!-- Close div.container in header.ejs-->
</body>
</html>
